<h2>Lagrade hästar</h2>
<!-- Table to print horses -->
<table id="horse-table">

    <!-- Table header -->
    <thead>
        <tr>
            <th>Nummer</th>
            <th>Bild</th>
            <th>Namn</th>
            <th>Smeknamn</th>
            <th>Kön</th>
            <th>Ras</th>
            <th>Level</th>
            <th>Info</th>
        </tr>
    </thead>

    <!-- Loop through horses -->
    <tbody>
        @foreach(var horse in data) {

            <tr>
                <td>@horse.HorseId</td>
                <td></td>
                <td>@horse.Name</td>
                <td>@horse.Nickname</td>
                <td>@horse.Gender</td>
                <td>@horse.Breed</td>
                <td>@horse.Level</td>
                <td>@horse.Info</td>
            </tr>

        }
    </tbody>

</table>